	+s-prod-head('prod2--rublencvet',title,"В наличии")
		+e.col.col
			+e.H1.title.d-none.d-md-block= title
		
			+e.group.row
				.col-auto.h5.fw-600 
					.first-price-js#price-1 3100 руб.*
					.second-price-js#price-2 2600 руб.*
				.col.text-secondary *Стоимость 
					br
					| за 1 поддон, 60 шт. 
			+e.group.row
				+e.title-group.col-auto Состав:
				.col.fw-500
					table
						tr
							td Гранитный отсев
							td Вода
						
						tr
							td Цемент ПЦ400
