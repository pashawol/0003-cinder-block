	+s-catalog-body()(class="s-catalog--page")
		+b.section-title.text-center
			h1 Шлакоблок
		.row
			+prod-slide("s-catalog-1","Шлакоблок 30%","пустотности «А Блок»","от 1800 руб.*","col-lg-3 col-sm-6",'','подробнее','30-prod.html',"item","В наличии")
				each t2, t1 in {'Размер:':'390х190х188 мм','Цвет:':'серый, красный'}
					+prod-tr(t1,t2)
			+prod-slide("s-catalog-2","Шлакоблок 50%","пустотности «А Блок»","от 1600 руб.*","col-lg-3 col-sm-6",'','подробнее','50-prod.html',"item","В наличии")
				each t2, t1 in {'Размер:':'390х190х188 мм','Цвет:':'серый, красный'}
					+prod-tr(t1,t2)
			+prod-slide("s-catalog-3","Перегородочный","камень 90мм","от 2100 руб.*","col-lg-3 col-sm-6",'','подробнее','90-prod.html',"item","В наличии")
				each t2, t1 in {'Размер:':'390х190х90 мм','Цвет:':'серый, красный'}
					+prod-tr(t1,t2)
			+prod-slide("s-catalog-4","Перегородочный","камень 120мм","от 2100 руб.*","col-lg-3 col-sm-6",'','подробнее','120-prod.html',"item","В наличии")
				each t2, t1 in {'Размер:':'390х190х120 мм','Цвет:':'серый, красный'}
					+prod-tr(t1,t2)
			.col-12
				+e.foot-text.text-secondary *Стоимость за&nbsp;1&nbsp;поддон, 60&nbsp;шт.
			
	
			+prod-slide("s-catalog-5","Шлакоблок","столбовой","от 60 руб.*","col-lg-3 col-sm-6",'','подробнее','stolb-prod.html',"item","В наличии")
				each t2, t1 in {'Размер:':'320х320 мм','Цвет:':'серый, красный'}
					+prod-tr(t1,t2)

		+e.foot-block--page
			//- +e.btn--foot.--foot-js.btn-primary(href='#') Смотреть весь шлакоблок
			+e.foot-block-text 
				+icon("info")
				div 
