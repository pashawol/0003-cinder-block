mixin prod-slide(img,title,subtitle,price,classs="col-lg-3 col-sm-6",size,at="подробнее",al="#", item, label, labelclass)
	+e.col(class= classs)
		+b.prod-item
			if label
				+e.label(class= labelclass)= label 

			+e.img-wrap(href="#")
				if item
					+pic(img,'jpg','','lazy',0)
				else
					img(src="#" data-lazy=`img/@2x/${img}`, alt="")
					//- img.lazy(src="#" data-src=`img/@2x/${img}`, alt="")
			+e.title= title
				if subtitle
					+e.sub= subtitle
			if size
				+e.size= size
			if block
				table
					block
			if price
				+e.price= price
			+e.btn(href= al)&attributes(attributes)= at
	// /+e.col

	// если используется таблица с характеристиками
mixin prod-tr(t1, t2)
	tr
		td= t1
		td= t2

mixin s-catalog-body()
	// start s-catalog
	+b.s-catalog.section&attributes(attributes)
		.container.lazy-background
			block
	// end s-catalog
mixin s-catalog()
	// start s-catalog
	+b.SECTION.s-catalog--main-page.section#s-catalog&attributes(attributes)
		.container
			+b.section-title.text-lg-left.text-center
				.row.justify-content-center
					.col-lg-auto
						h2 В ассортименте
							| 
							strong.text-primary более 20 позиций
					.col-lg.col-sm-auto
						+e.text Можете сделать любой фасад
					.col-auto.row.text-left
						.col-auto
							+icon("pantone")
						.col.h6 Делаем шлакоблок любых цветов
				
			+e.slider--js
				+prod-slide("s-catalog-1.jpg","Шлакоблок 50%","пустотности «А Блок»","От 1600 руб.*","","",'подробнее','04-prod.html')
