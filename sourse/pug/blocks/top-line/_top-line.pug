mixin top-line()
	// start .top-line
	+b.top-line.block-with-lazy
		.container
			.row
				.col-xl-auto.col-md
					.row
						+e.col.col-auto
							+b.toggle-menu-mobile
								span
								ul
									li: a(href="02-categories.html") Каталог
									li: a(href="05-shipping.html") Доставка и оплата
						+e.col.col-xl-auto.col
							+e.logo(href="/")
								.d-none.d-sm-block
									+pic('logo','png','','',0)
								+e.logo-text Производство шлакоблока и&nbsp;тротуарной плитки
				+e.col.col-sm-auto.col-6
					+e.text 
						+e.icon-wrap
							+icon('star') 
						div Работаем 
							br
							| с&nbsp;2006 года

				+e.col.col-sm-auto.col-6
					+e.text
						+e.icon-wrap
							+icon('mark') 
						div г.&nbsp;Магнитогорск,
							br
							|  Вайнера, 2А
				+e.col.col-auto
					+e.text--tel
						+e.icon-wrap
							+icon('tel')
						div
							+e.tel(href="tel:+7351945-52-03") +7 3519 45-52-03
							+e.time Звоните с&nbsp;9:00 -&nbsp;18:00
							+e.sm-link.link-modal.d-xl-none(  data-src="#modal-call" href="javascript:;" data-order="Заказать звонок в шапке") Перезвоните мне
				+e.col.col-auto.d-xl-block.d-none
					+e.btn.link-modal(  data-src="#modal-call" href="javascript:;" data-order="Заказать звонок в шапке") Перезвоните мне
	// end .top-line